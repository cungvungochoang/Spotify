<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.EditProfileFragment"
    android:background="@color/bg_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left_ic"
            android:background="@drawable/bg_white_corner_full"
            />
        <TextView
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="24dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Chỉnh sửa"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="42dp"
        android:gravity="center_horizontal"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:riv_corner_radius="100dp"
            app:riv_border_width="2dip"
            android:src="@drawable/ic_launcher_background"
            app:riv_border_color="@color/green"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btn_choose_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chọn ảnh"
            android:backgroundTint="@color/green"
            />

        <EditText
            android:id="@+id/edt_fullname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edt_white_corner_24"
            android:textColor="@color/white"
            android:hint="Họ tên"
            android:paddingHorizontal="24dp"
            android:textSize="16dp"
            android:textColorHint="@color/dark_gray"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edt_white_corner_24"
            android:textColor="@color/white"
            android:hint="Email"
            android:paddingHorizontal="24dp"
            android:textSize="16dp"
            android:textColorHint="@color/dark_gray"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:alpha="0.8"
            />

        <EditText
            android:id="@+id/edt_role"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edt_white_corner_24"
            android:textColor="@color/white"
            android:hint="Quyền"
            android:paddingHorizontal="24dp"
            android:textSize="16dp"
            android:textColorHint="@color/dark_gray"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:alpha="0.8"
            />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green"
            app:cornerRadius="80dp"
            android:textSize="16sp"
            android:text="Chỉnh sửa"
            />
    </LinearLayout>
</LinearLayout>